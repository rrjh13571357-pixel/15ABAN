{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "backend/server.ts",
    "virtual-backend/**/*.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/backend",
    "dist/virtual-backend"
  ]
}
